{% extends 'base.html.twig' %}

{% block title %}Shuffled Deck{% endblock %}

{% block body %}
    <h1>Shuffled Deck</h1>
    <table>
        <tr>
            <th>Card</th>
            {#<th>Suit</th>
            <th>Value</th>#}
        </tr>
        {% for suit in ['Hearts', 'Diamonds', 'Clubs', 'Spades'] %}
            {% for value in range(1, 10) %}
                {% set card = deck.drawCard(suit, value) %}
                {% if card is not null %}
                <tr>
                    <td>{{ card.getAsHtmlString()|raw }}</td>
                    {#<td>{{ suit }}</td>
                    <td>{{ value }}</td>#}
                </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </table>
{% endblock %}
